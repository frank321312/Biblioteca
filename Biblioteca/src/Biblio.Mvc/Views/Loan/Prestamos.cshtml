@model Biblio.Mvc.Controllers.Modal.PrestamoModal

<header>
    <h1>Prestamos</h1>
</header>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <tr class="bg-dark text-white">
            <th>ISBN</th>
            <th>Copia</th>
            <th></th>
        </tr>
        @foreach (var prestamo in Model.Prestamos)
        {
            <tr>
                <td>@prestamo.ISBN</td>
                <td>@prestamo.NumeroCopia</td>

                <td>
                    <a asp-controller="Prestamo" asp-action="VerPrestamos" asp-route-cadena="@prestamo.Dni,@prestamo.ISBN" class="btn btn-primary">
                            Ver Detalle
                    </a>
                </td>
            </tr>
        }
    </table>
</div>