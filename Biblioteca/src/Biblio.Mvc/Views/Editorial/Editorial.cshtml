@model Biblio.Mvc.Controllers.Modal.EditorialModal
<header>
    <h1>Editoriales</h1>
</header>
<form class="d-flex mb-4" asp-controller="Editorial" asp-action="BuscarEditorial" method="get">
    <input class="form-control me-2" value="" type="text" placeholder="Buscar Autor" aria-label="Buscar Autor"
        asp-for="busqueda">
    <button class="btn btn-outline-success" type="submit">Buscar</button>
</form>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <tr class="bg-dark text-white">
            <th>Editorial</th>
            <th>Detalle</th>
        </tr>
        @foreach (var editorial in Model.editorials)
        {
            <tr>
                <td>@editorial.Nombre</td>
                <td>
                    <a asp-controller="Editorial" asp-action="DetallesDeLibros" asp-route-id="@editorial.IdEditorial"
                        class="btn btn-primary">
                        Ver Libros
                    </a>
                </td>
            </tr>
        }
    </table>
</div>