@model IEnumerable<Biblio.Core.Curso>

<header>
    <h1>Cursos</h1>
</header>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <tr class="bg-dark text-white">
            <th>AÃ±o</th>
            <th>Division</th>
            <th>Detalle</th>
        </tr>
        @foreach (var curso in Model)
        {
            <tr>
                <td>@curso.anio</td>
                <td>@curso.Division</td>
                <td>
                     <a asp-controller="Curso" asp-action="DetalleDeAlumnos" asp-route-Curso="@curso.IdCurso" class="btn btn-primary">
                        Ver Alumnos
                    </a>
                </td>
            </tr>
        }
    </table>
</div>