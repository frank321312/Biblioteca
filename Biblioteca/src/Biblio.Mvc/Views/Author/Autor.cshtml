@model IEnumerable<Biblio.Core.Autor>
<header>
    <h1>Autores</h1>
</header>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <tr class="bg-dark text-white">
            <th>Id</th>
            <th>Nombre</th>
            <th>Apellido</th>
        </tr>
        @foreach (var autor in Model)
        {
            <tr>
                <td>@autor.IdAutor</td>
                <td>@autor.Nombre</td>
                <td>@autor.Apellido</td>
            </tr>
        }
    </table>
</div>