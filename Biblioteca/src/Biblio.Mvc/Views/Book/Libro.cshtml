@model IEnumerable<Biblio.Core.Libro>

<header>
    <h1>Libro</h1>
</header>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <tr class="bg-dark text-white">
            <th>IdTitulo</th>
            <th>IdEditorial</th> 
            <th>ISBN</th> 
        </tr>
        @foreach (var libro in Model)
        {
            <tr>
                <td>@libro.Titulo.IdTitulo</td>
                <td>@libro.Editorial.IdEditorial</td>
                <td>@libro.ISBN</td> 
            </tr>
        }
    </table>
</div>